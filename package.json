{
  "name": "esp-controller",
  "version": "1.2.0",
  "description": "Typescript package for connecting and flashing images to your ESP device.",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint 'src/**/*.ts' --fix",
    "build": "tsup",
    "coverage": "vitest run --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/HalleyInteractive/esp-controller.git"
  },
  "keywords": [
    "esp",
    "espressif",
    "esp32",
    "esp-32"
  ],
  "author": "Niels Overwijn",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/HalleyInteractive/esp-controller/issues"
  },
  "homepage": "https://github.com/HalleyInteractive/esp-controller#readme",
  "dependencies": {
    "@types/spark-md5": "^3.0.5",
    "@types/w3c-web-serial": "^1.0.8",
    "spark-md5": "^3.0.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "@vitest/coverage-v8": "^4.0.18",
    "csv-parse": "^6.1.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "inquirer": "^13.2.2",
    "prettier": "^3.8.1",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0",
    "vitest": "^4.0.18"
  }
}
